  
  {{!-- Add Band --}}
	<div class="panel panel-default">
		<div class="panel-body">
			<form {{action "createBand" on="submit"}}>
	    	{{input type="text" class="new-band" placeholder="New band" value=name}}
	    	<button type="submit" class="btn btn-primary btn-sm new-band-button" 
	    		disabled={{isAddButtonDisabled}}>
	    		Add
	    	</button>
	    </form>
	   </div>
	</div>
	
	{{!-- List Bands --}}
	{{#each model as |band|}}
		<div class="panel panel-default">
	    <div class="panel-heading">
		  	{{#link-to "bands.band" band class="band-link"}}
		    	{{capitalize band.name}}
		    {{/link-to}}
	    </div>

	    <div class="panel-body">
	    	{{ band-songs songs=band.songs}}
	    </div>
  	</div>
	 {{/each}}
